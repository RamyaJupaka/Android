<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEmployee"
    android:background="@drawable/pastry">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UpdateEmployee"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:textColor="#F3F4F1"
                android:fontFamily="@font/josefin_slab_semibold_italic"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Name"
                android:textColor="#F3F4F1"
                android:fontFamily="@font/josefin_slab_semibold_italic"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/UpdateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="EmployeeID"
                android:textColor="#F3F4F1"
                android:fontFamily="@font/josefin_slab_semibold_italic"
                android:textSize="25sp"
                android:textStyle="bold"
                ></TextView>
            <EditText

                android:id="@+id/UpdateEmpId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#fff"
                >

            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Employee Type"
                android:textColor="#F3F4F1"
                android:fontFamily="@font/josefin_slab_semibold_italic"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/UpdateType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType=""
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Salary"
                android:textColor="#F3F4F1"
                android:fontFamily="@font/josefin_slab_semibold_italic"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/UpdateSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Email Address"
                android:textColor="#F3F4F1"
                android:fontFamily="@font/josefin_slab_semibold_italic"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/UpdateEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Password"
                android:textColor="#F8FAF6"
                android:fontFamily="@font/josefin_slab_semibold_italic"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/UpdatePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#fff"/>

            <Button
            android:id="@+id/UpdateEmployeeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="#101010"
            android:fontFamily="@font/josefin_slab_semibold_italic"
            android:textSize="20sp"
                android:background="@drawable/custombuttons"
                android:textStyle="bold"
                android:layout_marginLeft="60dp"></Button>

            <Button
                android:id="@+id/FindEmployeeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_slab_semibold_italic"
                android:text="Find"
                android:textStyle="bold"
                android:textColor="#101010"
                android:background="@drawable/custombuttons"
                android:textSize="20sp"
                android:layout_marginLeft="60dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>