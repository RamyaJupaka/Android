<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sport Preference"
            android:textSize="30sp"
            android:textColor="#0ECC61"
            android:textAlignment="center"
            android:textStyle="italic"
            android:gravity="center"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name :"
            android:textSize="30sp"
            android:textColor="#DF1E5F"
            android:layout_marginLeft="30dp"
            android:textStyle="italic"/>

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:inputType="textPersonName"
            android:text=""
            android:layout_marginRight="30dp"
            android:textSize="30sp"
            android:background="#FFFFFF"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sport"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:textColor="#239BFA"
            android:textStyle="italic"/>

        <RadioGroup
            android:id="@+id/radioGroupSport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >

            <RadioButton
                android:id="@+id/rbtnSoccer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soccer"
                android:textSize="20sp"
                android:textColor="#580368"
                android:textStyle="italic"/>

            <RadioButton
                android:id="@+id/rbtnFootball"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Football"
                android:textSize="20sp"
                android:textColor="#580368"
                android:textStyle="italic"/>

            <RadioButton
                android:id="@+id/rbtnHockey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hockey"
                android:textSize="20sp"
                android:textColor="#580368"
                android:textStyle="italic"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:textStyle="italic"
            android:textColor="#976820"
            />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="30sp"
            android:layout_marginRight="30dp"
            android:textStyle="italic"
            android:textColor="#976820"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>